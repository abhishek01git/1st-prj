
<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Address</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="container my-5">
        <% if (address) { %>
        <div class="edit-address-form bg-light p-4 rounded shadow-sm">
            <h3 class="text-center mb-4 text-primary">Edit User Address</h3>
            <form id="addressForm" method="POST" action="/edit-address?id=<%= address._id %>">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="addressType" class="form-label">Address Type:</label>
                        <input type="text" class="form-control" value="<%= address.addressType %>" id="addressType" name="addressType" required>
                    </div>
                    <div class="col-md-4">
                        <label for="name" class="form-label">Name:</label>
                        <input type="text" class="form-control" value="<%= address.name %>" id="name" name="name" required>
                    </div>
                    <div class="col-md-4">
                        <label for="city" class="form-label">City:</label>
                        <input type="text" class="form-control" value="<%= address.city %>" id="city" name="city" required>
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-md-4">
                        <label for="landMark" class="form-label">Landmark:</label>
                        <input type="text" class="form-control" value="<%= address.landmark %>" id="landMark" name="landMark" required>
                    </div>
                    <div class="col-md-4">
                        <label for="state" class="form-label">State:</label>
                        <input type="text" class="form-control" value="<%= address.state %>" id="state" name="state" required>
                    </div>
                    <div class="col-md-4">
                        <label for="pincode" class="form-label">Pincode:</label>
                        <input type="number" class="form-control" value="<%= address.pincode %>" id="pincode" name="pincode" required>
                    </div>
                </div>
                <div class="row g-3 mt-3">
                    <div class="col-md-6 " style="margin-left: 20%;">
                        <label for ="phone" class="form-label">Phone:</label>
                        <input type="number" class="form-control" value="<%= address.phone %>" id="phone" name="phone" required>
                    </div>
                    
                </div>
                <div class="text-center mt-4">
                    <button type="submit" id="submitButton" class="btn btn-primary btn-lg">Update Address</button>
                </div>
            </form>
        </div>
        <% } else { %>
        <div class="alert alert-danger text-center mt-5">
            <strong>Address not found!</strong> Please check and try again.
        </div>
        <% } %>
    </div>

    <script>
        document.getElementById('submitButton').addEventListener('click', function (event) {
            if (!validateForm()) {
                event.preventDefault();
            }
        });

        function validateForm() {
            let isValid = true;
            const requiredFields = ["addressType", "name", "city", "landMark", "state", "pincode", "phone",];
            requiredFields.forEach(function (field) {
                const input = document.getElementById(field);
                if (input.value.trim() === "") {
                    Swal.fire({
                        title: 'Error',
                        text: "Please fill all the fields",
                        icon: 'error'
                    });
                    isValid = false;
                }
            });

            return isValid;
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

