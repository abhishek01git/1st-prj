<script>

async function updateQuantity(event, button, action, maxQuantity, index) {
    event.preventDefault()
    const size = document.getElementById('size' + index).innerText.trim(); 
    const productId = button.getAttribute('data-product-id'); 
    const quantityInput = button.closest('.quantity__box').querySelector('.quantity__number');
    let currentQuantity = parseInt(quantityInput.value, 10);

    const stockLimit = parseInt(quantityInput.max, 10); 

    if (action === 'decrease' && currentQuantity > 1) {
        currentQuantity -= 1;
    } else if (action === 'increase') {
        if (currentQuantity + 1 > stockLimit) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: `Only ${stockLimit} units are available.`,
            });
            return;
        }

        if (currentQuantity + 1 > maxQuantity) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: `You can only buy a maximum of ${maxQuantity} units.`,
            });
            return;
        }

        currentQuantity += 1;
    }

    quantityInput.value = currentQuantity;

    try {
        const response = await fetch(`/cart/update/${productId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ productId, quantity: currentQuantity, size }),
        });

        const result = await response.json();
        if (response.ok) {
            
   
        } 
        
        if(result.success) { 

            console.log('reerere')

            console.log(result.cart.items)
            console.log(result.grandTotal)
            console.log( "total",result.totalAmount); // Debugging the value
            // document.getElementById(`item-price${index}`).style.display = 'none'
         const data =  document.getElementById(`item-price${index}`).textContent = result.totalAmount;
         console.log('eddddd',data)

            document.getElementById('grand-total').innerHTML = result.grandTotal;;
            // const totalElement = button.closest('tr').querySelector('.cart__price.end');
            // totalElement.textContent = `RS ${(currentQuantity * parseFloat(result.price)).toFixed(2)}`;  // Ensure the currency symbol is consistent
        } else { 
            if (result.availableQuantity) {
                document.querySelector('.quantity__number').value = result.availableQuantity;
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: `Only ${result.availableQuantity} units are available for size ${size}.`,
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: result.error, 
                });
            }
        }
    } catch (error) {
        console.error('Error updating cart:', error);
    }
}

